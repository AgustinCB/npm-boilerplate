{
  "name": "npm-boilerplate",
  "version": "1.0.0",
  "description": "NPM package boilerplate with tests and babel for ES2015",
  "main": "./lib/main",
  "scripts": {
    "lint": "cmd.js 'src/**/*.js'",
    "test": "nodemon --exec 'mocha --require babel-core/register -R spec'",
    "watch": "nodemon --exec 'npm run start'",
    "gendoc": "jsdox --output docs src",
    "build": "babel src --presets babel-preset-es2015 --out-dir lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AgustinCB/npm-boilerplate.git"
  },
  "keywords": [
    "npm",
    "boilerplate",
    "package"
  ],
  "author": "AgustinCB",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/AgustinCB/npm-boilerplate/issues"
  },
  "homepage": "https://github.com/AgustinCB/npm-boilerplate#readme",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.5.0",
    "jsdox": "^0.4.10",
    "mocha": "^2.5.3",
    "standard": "^7.1.2"
  },
  "dependencies": {
    "nodemon": "^1.11.0"
  }
}
